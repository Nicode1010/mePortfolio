---

const lenguajes = [
  { nombre: "JavaScript", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/javascript.svg" },
  { nombre: "TypeScript", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/typescript.svg" },
  { nombre: "Python", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/python.svg" },
  { nombre: "HTML5", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/html5.svg" },
  { nombre: "CSS3", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/css3.svg" },
];

const tecnologias = [
  { nombre: "Node.js", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/nodedotjs.svg" },
  { nombre: "AWS", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/amazonaws.svg" },
  { nombre: "SQL Server", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/microsoftsqlserver.svg" },
  { nombre: "Docker", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/docker.svg" },
  { nombre: "Git", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/git.svg" },
];

const frameworks = [
  { nombre: "React", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/react.svg" },
  { nombre: "Next.js", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/nextdotjs.svg" },
  { nombre: "Django", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/django.svg" },
  { nombre: "Tailwind CSS", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/tailwindcss.svg" },
  { nombre: "Express.js", icono: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/express.svg" },
];
---

<section class="space-y-16">
  <div>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Lenguajes de Programación</h2>
    <div class="grid grid-cols-2 gap-4 md:grid-cols-4 lg:grid-cols-5">
      {lenguajes.map((lenguaje) => (
        <div class="flex flex-col items-center space-y-2 text-center">
          <img src={lenguaje.icono} alt={lenguaje.nombre} class="h-12 w-12 icon-color" />
          <span class="text-gray-700 dark:text-gray-300">{lenguaje.nombre}</span>
        </div>
      ))}
    </div>
  </div>

  <div>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Tecnologías</h2>
    <div class="grid grid-cols-2 gap-4 md:grid-cols-4 lg:grid-cols-5">
      {tecnologias.map((tecnologia) => (
        <div class="flex flex-col items-center space-y-2 text-center">
          <img src={tecnologia.icono} alt={tecnologia.nombre} class="h-12 w-12 icon-color" />
          <span class="text-gray-700 dark:text-gray-300">{tecnologia.nombre}</span>
        </div>
      ))}
    </div>
  </div>

  <div>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Frameworks</h2>
    <div class="grid grid-cols-2 gap-4 md:grid-cols-4 lg:grid-cols-5">
      {frameworks.map((framework) => (
        <div class="flex flex-col items-center space-y-2 text-center">
          <img src={framework.icono} alt={framework.nombre} class="h-12 w-12 icon-color" />
          <span class="text-gray-700 dark:text-gray-300">{framework.nombre}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Aplica los estilos para los íconos en modo claro y oscuro */
  .icon-color {
    filter: invert(0); /* Default light mode (black icons) */
  }

  @media (prefers-color-scheme: dark) {
    .icon-color {
      filter: invert(1) hue-rotate(180deg); /* Dark mode (white icons) */
    }
  }
</style>
